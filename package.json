{
  "name": "remit",
  "version": "2.0.0",
  "description": "A small set of functionality used to create microservices that don't need to be aware of one-another's existence.",
  "main": "index.js",
  "scripts": {
    "test": "node_modules/.bin/mocha --require test/bootstrap/node test/lib/*.test.js test/lib/**/*.test.js -w",
    "coverage": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- ./test/index.js --timeout=60000",
    "coverage-build": "node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha --report lcovonly -- -R spec --require test/bootstrap/node test/*.test.js test/**/*.test.js && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "author": "Jack Williams <jack@tagstr.co>",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.4.1",
    "debug": "^2.2.0",
    "eventemitter3": "^1.2.0",
    "lodash": "^4.12.0",
    "node-uuid": "^1.4.7"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "istanbul": "^0.4.3",
    "mocha": "^2.5.3",
    "prompt": "^1.0.0",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jpwilliams/remit.git"
  },
  "keywords": [
    "micro",
    "service",
    "microservice",
    "microservices",
    "amqp",
    "rabbitmq",
    "zeromq",
    "rpc",
    "request",
    "response",
    "emit",
    "listen"
  ],
  "bugs": {
    "url": "https://github.com/jpwilliams/remit/issues"
  },
  "homepage": "https://github.com/jpwilliams/remit#readme"
}
